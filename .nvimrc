let $VIMRUNTIME='/Applications/MacVim.app/Contents/Resources/vim/runtime'
syntax on

set autoindent copyindent cindent smartindent
set tabstop=2 shiftwidth=2 softtabstop=2
set expandtab smarttab shiftround
set backspace=indent,eol,start

set nobackup
set noswapfile

set number
set laststatus=2

set ignorecase

nnoremap : ;
nnoremap ; :
let mapleader=','
